<html>
	<head>
		<link rel='stylesheet' type='text/css' href='https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.4/semantic.min.css' media='screen' title='no title' charset='utf-8'> 		  		
		<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.4/semantic.min.js"></script>
		<meta charset='UTF-8'>
		<meta name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0'>
		<title>Registro de empleado por horas</title>    
	</head>
	<body>
	<div class="ui basic padded segment">
		<div class="ui red padded center aligned basic segment">
			<h1 class="ui orange center aligned header">Registro de Servicios de Pago </h1> 
		</div>
		
		<div class="ui vertical stripe quote segment">
			<div class="ui equal width stackable internally celled grid">
		    	<div class="center aligned row">
		        	<div class="centered column">
				        	
						<div class="ui container">
							<div class="ui top attached tabular menu">
							  <a class="active item" data-tab="first">Agregar cargo por servicios</a>
							  <a class="item" data-tab="second">Agregar recibo de venta</a>
							  <a class="item" data-tab="third">Agregar tarjeta</a>
							</div>
							<div class="ui bottom attached active tab segment" data-tab="first">
							 	<form class='ui form' method='post' action='/agregarCargoPorServicio'>			
									<label>ID:</label>
									<input type='text' name='id'><br><br>
									<label>Cargo por servicio:</label>
									<input type='text' name='cargo' step='any'><br><br>
									<label>Fecha de Pago:</label>
									<div class="ui vertical stripe quote segment">
										<div class="ui equal width stackable internally celled grid">
										    <div class="center aligned row">
								    	    	<div class="column">
													Dia<input type='number' name='dia_pago1'>
												</div>
												<div class="column">
													Mes<input type='number' name='mes_pago1'>
												</div>
												<div class="column">
													Anio<input type='number' name='anio_pago1'>
												</div>
											</div>
										</div>
									</div>									
									<div class='ui segment center aligned  basic'>
										<input class='ui olive button' type='submit' value='Registrar'>
									</div>
								</form>
							</div>
							<div class="ui bottom attached tab segment" data-tab="second">		  
							  <form class='ui form' method='post' action='/agregarReciboVenta'>			
								<label>ID:</label>
								<input type='text' name='id2'><br>	<br>							
								<label>Monto:</label>
								<input type='number' name='amount' step='any'><br><br>
								<label>Fecha de Pago:</label>
								<div class="ui vertical stripe quote segment">
										<div class="ui equal width stackable internally celled grid">
										    <div class="center aligned row">
								    	    	<div class="column">
													Dia<input type='number' name='dia_pago2'>
												</div>
												<div class="column">
													Mes<input type='number' name='mes_pago2'>
												</div>
												<div class="column">
													Anio<input type='number' name='anio_pago2'>
												</div>
											</div>
										</div>
									</div>		
								
								<div class='ui segment center aligned  basic'>
									<input class='ui olive button' type='submit' value='Registrar'>
								</div>
								</form>
							</div>
							<div class="ui bottom attached tab segment" data-tab="third">
							  <form class='ui form' method='post' action='/agregarTimeCard'>			
								<label>ID:</label>
								<input type='text' name='id3'><br><br>
								<label>Horas:</label>
								<input type='text' name='hours' step='any'><br><br>
								<label>Fecha de Pago:</label>
								<div class="ui vertical stripe quote segment">
										<div class="ui equal width stackable internally celled grid">
										    <div class="center aligned row">
								    	    	<div class="column">
													Dia<input type='number' name='dia_pago3'>
												</div>
												<div class="column">
													Mes<input type='number' name='mes_pago3'>
												</div>
												<div class="column">
													Anio<input type='number' name='anio_pago3'>
												</div>
											</div>
										</div>
									</div>		
								<div class='ui segment center aligned  basic'>
									<input class='ui olive button' type='submit' value='Registrar'>
								</div>
								</form>
							</div>
							<div class='ui segment center aligned basic'>
								<form action='/'>
									<input class='ui grey button' type='submit' value='Volver a la Pagina Principal' />
								</form>
							</div>	
						</div>
					</div>
		        	<div class="column">
		        	<h3> Lista de empleados actuales</h3>		        	
		        		#foreach( $product in $empleados )
		                  $product.onlyEmployee($updatable)		                 			 						                    
		                #end		                     		
		        	</div>
	      	</div>
    	</div>
  	</div>
</div>
</body>
<script>
	$('.tabular.menu .item').tab();
	$('.menu .item').tab();
</script>
</html>	